@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="jumbotron" style="text-align: center;">
    <h1>Welocome to User Dashboard.</h1>
    <h4 class="lead" style="text-align: center;">
        <b><u>@User.Identity.GetUserName()</u></b>
    </h4>
    <hr />
    <div style="padding:5px; border: 1px solid black; background-color: white;" class="row">
        <p>Manage Your Account Here. As a Customer.</p>
    </div>
</div>
<hr />

<div class="row">
    <div class="container">
        <h1 style="text-align:center;"><u><b>Your General Options</b></u></h1>
        <hr />
        <br />
        <div class="col-md-3">
            @Html.ActionLink("All My Orders", "customerOrders", "MyUser", null, new { @class = "btn btn-default" }) <br /><br />
            @Html.ActionLink("Customer Help!", "#", "#", null, new { @class = "btn btn-danger" }) <br /><br />
            
            <hr />
        </div>

        <div style="background-color: white; padding: 15px; text-align:center;" class="col-md-9">
            <div class="container">

                <p style="padding: 5px 5px; border: 1px dashed gray;" class="col-md-4">
                    @Html.ActionLink("Rate Our Delivery", "#", "Home", null, new { @class = "btn btn-danger" })
                    <br />
                    <br />
                    Rate Your Delivery!
                </p>

                <p style="padding: 5px 5px; border: 1px dashed gray;" class="col-md-4">
                    @Html.ActionLink("Manage Subscription", "#", "#", null, new { @class = "btn btn-danger" })
                    <br />
                    <br />
                    Your Subscription Deals Here!
                </p>
            </div>
            <hr />
            <p>
                <h2>
                    Delete account Doesnt Work.
                </h2>
            </p>
        </div>
    </div>
</div>