
@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2><u>Thank you, @ViewBag.User</u></h2>

<div class="form-inline">
    <h3>
        Your Order is being Processed.  @Html.ActionLink("Click Here!", "customerOrders", "MyUser",null,new { @class = "btn btn-success"}) for your Orders.
    </h3>
    <p>
        Go Back to @Html.ActionLink("Store Catalogue!", "ProdCatalogue", "Store")
        <br />

    </p>
    <p>
        @if (User.IsInRole("Customer"))
        {
            @Html.ActionLink("Go Back Your Dashboard!", "Index", "MyUser")
        }
        else
        {
            @Html.ActionLink("Track Your Order", "Index", "MyUser")
        }
    </p>
</div>